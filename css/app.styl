
.ig-maincontainer
	font-size 2rem

.ig-canvas-with-hole
	z-index 2000
	position fixed
	left 0
	top 0
	width 100%
	height 100%
	// background rgba(0,0,0,0)

.ig-infobox
	position absolute
	// padding 0 1em 1em 1em
	z-index 2001
	transition left 0.5s, top 0.5s
	color #fff
	margin 0 2em 2em 2em
	// background-color rgba(255,255,255,0.9)
	// border-radius 2px
	h3
		padding-top 0
		margin-top 0
	

.ig-nav-container
	width 100%
	bottom 1em
	z-index 2002
	position absolute
	

.ig-nav
	position relative
	display table
	margin 0 auto
	color #F00
	color rgb(255, 175, 69)

// .ig-nav-btn-group
// 	margin-top 1em
	
.ig-nav-btn
	float left
	// color #F00
	margin-right 1em
	cursor pointer
	font-weight bold
	// touch-action manipulation
	user-select none
	i
		font-size 0.9em
		margin 0 0.1em
		transition transform 0.5s

.ig-nav-btn:nth-child(1):hover
	i
		transform translateX(-0.5em) rotate(-360deg)
.ig-nav-btn:nth-child(2):hover
	i
		transform translateX(0.5em) rotate(360deg)
	